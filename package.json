{
  "name": "alldebrid",
  "version": "2.0.0-alpha1",
  "description": "alternative interface for AllDebrid",
  "dependencies": {
    "angular": "^1.5.7",
    "angular-formly": "^8.2.1",
    "angular-formly-templates-bootstrap": "^6.4.0",
    "angular-ui-router": "^1.0.0-beta.1",
    "api-check": "^7.5.5",
    "bootstrap-sass": "^3.3.5",
    "bootswatch-scss": "^3.2.0",
    "eventemitter3": "^1.2.0",
    "jsonpipe": "^2.0.0"
  },
  "scripts": {
    "clean": "rimraf build && mkdirp build",

    "build": "cross-env NODE_ENV=production webpack --progress -p",
    "backend": "cross-env NODE_ENV=production node backend/",

    "development": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "nodemon --debug backend/ -w backend/ -V",
    "dev:frontend": "webpack-dev-server --inline --progress",

    "production": "npm run build && npm run backend",
    "start": "npm run development",

    "postinstall": "npm run install:backend && npm run install:fonts",
    "install:backend": "cd backend && npm install && cd ..",
    "install:fonts": "ncp node_modules/bootstrap-sass/assets/fonts/bootstrap/ public/fonts/",

    "test": "cd backend && npm test && cd ..",
    "test-dev": "cd backend && npm run test-dev && cd ..",

    "docker:build": "docker build -t colthreepv/alldebrid:2.0.0-alpha1 .",
    "docker:volume": "docker volume create --name alldebrid-db",
    "docker:spawn": "docker run -d -p 8100:8100 -v alldebrid-db:/code/level.db -v alldebrid-db:/code/session.db --name alldebrid colthreepv/alldebrid:2.0.0-alpha1",
    "docker:clean": "docker ps -a --filter=\"name=alldebrid\" -q | xargs docker rm -f",
    "docker:run": "docker rm -f alldebrid-test && docker run --rm -p 8100:8100 -v alldebrid-db:/code/level.db -v alldebrid-db:/code/session.db --name alldebrid-test colthreepv/alldebrid:2.0.0-alpha1 && docker-machine ip",
    "docker:testimage": ""
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:colthreepv/alldebrid.git"
  },
  "keywords": [
    "alldebrid",
    "app"
  ],
  "author": "colthreepv",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/colthreepv/alldebrid/issues"
  },
  "homepage": "https://github.com/colthreepv/alldebrid",
  "devDependencies": {
    "babel-loader": "^6.2.4",
    "babel-plugin-angularjs-annotate": "^0.2.0",
    "babel-preset-es2015-webpack": "^6.4.1",
    "clean-webpack-plugin": "^0.1.9",
    "concurrently": "^2.1.0",
    "cross-env": "^1.0.7",
    "css-loader": "^0.23.1",
    "extract-text-webpack-plugin": "^1.0.1",
    "file-loader": "^0.9.0",
    "git-rev-sync": "^1.6.0",
    "html-loader": "^0.4.3",
    "ncp": "^2.0.0",
    "node-sass": "^3.8.0",
    "nodemon": "^1.9.2",
    "rimraf": "^2.5.2",
    "sass-loader": "^4.0.0",
    "stats-webpack-plugin": "^0.3.1",
    "style-loader": "^0.13.1",
    "url-loader": "^0.5.7",
    "webpack": "^2.1.0-beta.7",
    "webpack-dev-server": "^2.1.0-beta.0"
  }
}
